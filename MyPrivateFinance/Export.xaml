<Window x:Class="MyPrivateFinance.Export"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPrivateFinance"
        mc:Ignorable="d"
        Title="Export" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Path to File" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15,0,0,0"/>
        <TextBox Name="PathTextbox" Width="220" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.ColumnSpan="2" Margin="20,0,0,0"/>
        <Button Name="btnOpenFile" Width="50" Height="20" Click="btnOpenFile_Click" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,0,0,0">Select</Button>
        <Button  Width="90" Height="20" Content="Export Data" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="2" Margin="15,0,0,0" Click="Button_Click"/>
    </Grid>
</Window>
